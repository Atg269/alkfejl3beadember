            <th>Funkció</th>
        </tr>   
    </thead>
    <tbody>
        
        {{#each errors}}
        <tr>
            <td>{{date}}</td>
            <td>{{location}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>
                {{link-to "Megtekint" "errors.view" this class="btn btn-default btn-sm"}}
                {{link-to "Szerkeszt" "errors.edit" this class="btn btn-default btn-sm"}}
                <button {{action "deleteError" this }} class="btn btn-danger btn-sm">Törlés</button> {{!-- az adott objektumot törli --}}
            </td>
        </tr>
        {{/each}}
        
        
